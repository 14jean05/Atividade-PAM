		<!-- document.getElementById() -->
		<div id="exemplo">Este é um exemplo de div.</div>
		
		<!-- document.getElementsByTagName() -->
		<p>Parágrafo 1.</p>
		<p>Parágrafo 2.</p>
		
		<!-- document.getElementsByClassName() -->
		<p class="exemplo">Este é um exemplo de parágrafo.</p>
		<p class="exemplo">Outro exemplo de parágrafo.</p>
		
		<!-- document.querySelector() -->
		<div id="exemplo">Este é um exemplo de div.</div>
		
		<!-- document.querySelectorAll() -->
		<p class="exemplo">Este é um exemplo de parágrafo.</p>
		<p class="exemplo">Outro exemplo de parágrafo.</p>
	</body>
